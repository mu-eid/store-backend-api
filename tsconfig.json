{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es2021"],
        "module": "commonjs",

        /* JavaScript Support */
        "allowJs": true,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/utils/db_migrator.js"]
}
